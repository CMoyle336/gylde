{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@gylde/shared": ["../shared/types/index"],
      "@gylde/shared/*": ["../shared/types/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared/types"
  ]
}
