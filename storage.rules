rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can read and write to their own folder
    match /users/{userId}/{allPaths=**} {
      // Anyone can read user photos (for profile viewing)
      allow read: if true;
      // Only the owner can write to their folder
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Conversation images - readable by anyone authenticated, writable by authenticated users
    match /conversations/{conversationId}/images/{fileName} {
      // Any authenticated user can read conversation images
      allow read: if request.auth != null;
      // Any authenticated user can upload images (conversation membership checked at app level)
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Conversation videos - publicly readable (URLs are unguessable, membership checked at upload), writable by authenticated users
    match /conversations/{conversationId}/videos/{fileName} {
      // Anyone can read conversation videos (URLs include timestamp, conversation membership checked at upload)
      allow read: if true;
      // Any authenticated user can upload videos (conversation membership checked at app level)
      allow write: if request.auth != null
                   && request.resource.size < 100 * 1024 * 1024 // Max 100MB
                   && request.resource.contentType.matches('video/.*');
    }
    
    // Conversation video thumbnails - publicly readable (just preview images), writable by authenticated users
    match /conversations/{conversationId}/video-thumbnails/{fileName} {
      // Anyone can read video thumbnails (preview images, not sensitive)
      allow read: if true;
      // Any authenticated user can upload thumbnails (created by cloud function)
      allow write: if request.auth != null
                   && request.resource.size < 1 * 1024 * 1024 // Max 1MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
